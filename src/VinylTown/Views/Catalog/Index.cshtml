@model VinylTown.Features.Products.ProductsViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="CreateProductAsync" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Create new product </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                        @item.Stock
                    </td>
                    <td>
                        <a asp-action="UpdateProductAsync" class="btn btn-success" asp-route-Id="@item.Id"><i class="fas fa-edit"></i></a>
                    </td>
                                        <td>
                        <a asp-action="DeleteProductAsync" class="btn btn-danger" asp-route-Id="@item.Id"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
