@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5 ">
    <div class="row d-flex justify-content-center align-items-center">
        <div class=" col-xl-4">
            <div class="card bg-white text-dark" style="border-radius: 1rem;">
                <div class="card-body p-4 text-center">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="pb-5">
                            <h2 class="fw-bold mb-4 text-uppercase">Create account</h2>

                            <div class="form-outline form-white mb-4">
                                <input placeholder="Email" type="email" id="typeEmailX" class="form-control shadow-none" asp-for="Input.Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input placeholder="Password" type="password" id="typePasswordX" class="form-control shadow-none" asp-for="Input.Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input placeholder="Confirm password" type="password" id="typePasswordX" class="form-control shadow-none" 
                                asp-for="Input.ConfirmPassword" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <button class="btn btn-dark btn-lg px-5" type="submit">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
