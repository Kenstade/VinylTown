@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*
                        User:     <b>user@mail.com</b> OR <b>admin@mail.com</b>
                        Password: <b>Password@1</b>*@

<div class="container py-5 ">
    <div class="row d-flex justify-content-center align-items-center">
        <div class=" col-xl-4">
            <div class="card bg-white text-dark" style="border-radius: 1rem;">
                <div class="card-body p-4 text-center">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="pb-5">
                        <h2 class="fw-bold mb-4 text-uppercase">Login</h2>

                        <div class="form-outline form-white mb-4">
                            <input placeholder="Email" type="email" class="form-control" asp-for="Input.Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <input placeholder="Password" type="password" class="form-control" asp-for="Input.Password"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                            <p class="small mb-4 pb-lg-2">
                                <a class="text-dark-50" asp-page="./ForgotPassword">Forgot password?</a>
                            </p>
                        <button class="btn btn-dark btn-lg px-5" type="submit">Login</button>

                        @*<div class="d-flex justify-content-center text-center mt-4 pt-1">
                        <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                        <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                        </div>*@

                    </div>

                    <div>
                        <p class="mb-0">
                                Don't have an account? <a class="text-dark-50 fw-bold" 
                                asp-page="./Register" 
                                asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                        </p>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
